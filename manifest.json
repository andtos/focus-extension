{
  "manifest_version": 3,
  "name": "Focus",
  "version": "1.0",
  "permissions": [
    "activeTab", "scripting", "tabs"
  ],
  "description": "Reflect on your actions",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ]
}