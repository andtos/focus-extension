{
  "manifest_version": 3,
  "name": "Reading time",
  "version": "1.0",
  "permissions": [
    "activeTab", "scripting"
  ],
  "description": "Add the reading time to Chrome Extension documentation articles",
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_start"
    }
  ]
}